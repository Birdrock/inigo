#!/bin/bash

set -e -x

scripts_dir=$(cd $(dirname $0) && pwd)

pushd $(dirname $0)/../../../../.. # root of GOSPACE
  if which fly; then
    cp $scripts_dir/build.yml build.yml
    fly -- bogus-argv-0 "$@"
  else
    $scripts_dir/create_drone_yml $scripts_dir/drone.yml.template .drone.yml
    drone -privileged build
  fi
popd
